<div class="col-12 col-10 col-offset-1">
  <div>
    <h2 class="show-header">Showing <%= "#{@exercise.user.full_name}'s Workout Details" %></h2>
  </div>
  <div class="col-12 col-10 card member">
    <div class="col-4">
      <strong>Duration (min):</strong>
    </div>
    <div class="col-8 text-right">
      <%= @exercise.duration_in_min %>
    </div>
  </div>
  <div class="col-12 col-10 card member">
    <div class="col-4l">
      <strong>Workout Details:</strong>
    </div>
    <div class="col-8 text-right">
      <%= truncate(@exercise.workout, length: 50) %>
    </div>
  </div>
  <div class="col-12 col-10 card member">
    <div class="col-4">
      <strong>Activity Date:</strong>
    </div>
    <div class= "col-8 text-right">
      <%= @exercise.workout_date %>
    </div>
  </div>
  <br>
  <div class="row">
  <div class="col-12">
    <div class="col-10 offset-2">
      <%= link_to "Back", user_exercises_path(current_user), 
          class: "badge badge-dark link", id: "new-exer-btn" %>
    </div>
  </div>
</div>
</div>